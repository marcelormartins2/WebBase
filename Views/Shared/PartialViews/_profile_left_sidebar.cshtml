
@using Microsoft.AspNetCore.Identity
@using System.IO

@inject SignInManager<Usuario> SignInManager
@inject UserManager<Usuario> UserManager

@{  var avatar = this.User.Identity.Name.ToString() + ".jpg?" + DateTime.Now.Ticks;
}
<!--  .sidebar-panel -->
<div class="sidebar-panel">
    <h5 class="sidebar-panel-title">Usuario</h5>
</div>
<!-- / .sidebar-panel -->
<base href="/img/avatars/">

<div class="user-info clearfix">
    <img src="@avatar" alt="avatar">
    <span class="name">@UserManager.GetUserName(User)</span>
    <div class="btn-group">
        <button type="button" class="btn btn-default btn-xs">
            <i class="l-basic-gear"></i>
        </button>
        <button type="button" class="btn btn-default btn-xs dropdown-toggle" data-toggle="dropdown">
            perfil <span class="caret"></span>
        </button>
        <ul class="dropdown-menu right" role="menu">
            <li>
                <a asp-area="" asp-controller="Usuarios" asp-action="Index"><i class="fa fa-connectdevelop">
                </i>Abrir Perfil</a>
            </li>
            <li>
                <a href="#"><i class="fa fa-money"></i>Windraws</a>
            </li>
            <li>
                <a href="#"><i class="fa fa-credit-card"></i>Deposits</a>
            </li>
            <li class="divider"></li>
            <li>
                <a asp-area="Identity" asp-page="/Account/Logout"
                  asp-route-returnUrl="/Identity/Account/Login">
                <i class="fa fa-power-off"></i>Logout</a>
            </li>
        </ul>
    </div>
</div>
